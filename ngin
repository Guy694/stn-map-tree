server {
    listen 443 ssl http2;
    server_name stn.moph.go.th;


    ssl_certificate     /etc/ssl/certs/fullchain.pem;
    ssl_certificate_key /etc/ssl/certs/wildcard_moph_go_th.key;

    # File Upload Settings
    client_max_body_size 100M;
    client_body_timeout 300s;

    # Security Headers
    add_header Strict-Transport-Security "max-age=63072000" always;
    add_header X-Frame-Options DENY;
    add_header X-Content-Type-Options nosniff;
    add_header X-XSS-Protection "1; mode=block";

    # [ลบ] บล็อก location = /edoc และ /edoc/ เดิมออกไป เพราะ location / จะจัดการแทน
    # location = /edoc { ... }
    # location /edoc/ { ... }

     location = /stn-tree {
        return 301 $scheme://$server_name/stn-tree/;
    }

    location /stn-tree/ {
        proxy_pass http://203.157.238.51/stn-tree/;


        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $server_name;

        proxy_set_header X-Forwarded-Prefix /stn-tree;

        client_max_body_size 100M;
        proxy_connect_timeout 300s;
        proxy_send_timeout 300s;
        proxy_read_timeout 300s;
        proxy_buffering off;
        proxy_request_buffering off;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }