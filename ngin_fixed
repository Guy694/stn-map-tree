server {
    listen 443 ssl;  # ปิด http2 เพื่อแก้ ERR_HTTP2_PROTOCOL_ERROR
    server_name stn.moph.go.th;

    ssl_certificate     /etc/ssl/certs/fullchain.pem;
    ssl_certificate_key /etc/ssl/certs/wildcard_moph_go_th.key;

    # ตั้งค่าการอัปโหลดไฟล์
    client_max_body_size 100M;
    client_body_timeout 300s;

    # Headers ความปลอดภัย
    add_header Strict-Transport-Security "max-age=63072000" always;
    add_header X-Frame-Options DENY;
    add_header X-Content-Type-Options nosniff;
    add_header X-XSS-Protection "1; mode=block";

    # เพิ่ม location เฉพาะสำหรับ upload API
    location /stn-tree/api/upload/ {
        # ลบ path ออกจาก proxy_pass
        proxy_pass http://203.157.238.51:3000;

        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $server_name;
        proxy_set_header Connection "";

        # ตั้งค่า timeout สูงพิเศษสำหรับ upload
        client_max_body_size 100M;
        proxy_connect_timeout 600s;
        proxy_send_timeout 600s;
        proxy_read_timeout 600s;
        
        proxy_buffering off;
        proxy_request_buffering off;
    }

    location /stn-tree {
        # ลบ path ออกจาก proxy_pass
        proxy_pass http://203.157.238.51:3000;

        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $server_name;
        proxy_set_header Connection "";

        # ตั้งค่าการอัปโหลด
        client_max_body_size 100M;
        proxy_connect_timeout 300s;
        proxy_send_timeout 300s;
        proxy_read_timeout 300s;
        
        proxy_buffering on;
    }
}
