server {
    listen 443 ssl http2;
    server_name stn.moph.go.th;

    ssl_certificate     /etc/ssl/certs/fullchain.pem;
    ssl_certificate_key /etc/ssl/certs/wildcard_moph_go_th.key;

    # ตั้งค่าการอัปโหลดไฟล์
    client_max_body_size 100M;
    client_body_timeout 300s;

    # Headers ความปลอดภัย
    add_header Strict-Transport-Security "max-age=63072000" always;
    add_header X-Frame-Options DENY;
    add_header X-Content-Type-Options nosniff;
    add_header X-XSS-Protection "1; mode=block";

    location = /stn-tree {
        return 301 $scheme://$server_name/stn-tree/;
    }

    # เพิ่ม location เฉพาะสำหรับ upload API ที่มี timeout สูงกว่า
    location /stn-tree/api/upload/ {
        proxy_pass http://203.157.238.51/stn-tree/api/upload/;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $server_name;

        # ตั้งค่า timeout สูงพิเศษสำหรับ upload
        client_max_body_size 100M;
        proxy_connect_timeout 600s;
        proxy_send_timeout 600s;
        proxy_read_timeout 600s;
        
        proxy_buffering off;
        proxy_request_buffering off;
        
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }

    location /stn-tree/ {
        proxy_pass http://203.157.238.51/stn-tree/;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $server_name;
        proxy_set_header X-Forwarded-Prefix /stn-tree;

        # ตั้งค่าการอัปโหลด (Upload settings)
        client_max_body_size 100M;
        proxy_connect_timeout 300s;
        proxy_send_timeout 300s;
        proxy_read_timeout 300s;
        
        proxy_buffering on; 
        
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }
}
